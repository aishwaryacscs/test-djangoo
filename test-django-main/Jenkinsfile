pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Cloning repository...'
                git branch: 'main', url: 'https://github.com/aishwaryacscs/test-djangoo.git'
            }
        }

        stage('Set up Virtual Environment') {
            steps {
                echo 'ğŸ Setting up Python virtual environment...'
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r test-django-main/requirements.txt
                '''
            }
        }

        stage('Run Django Tests') {
            steps {
                echo 'ğŸ§ª Running Django tests...'
                sh '''
                    . venv/bin/activate
                    cd test-django-main
                    python manage.py test || echo "âš ï¸ No tests found, skipping..."
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Build successful!'
        }
        failure {
            echo 'âŒ Build failed â€” check the console output.'
        }
    }
}

