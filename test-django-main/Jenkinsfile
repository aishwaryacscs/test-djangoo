pipeline {
    agent any

    environment {
        PYTHON = 'python3'
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¦ Cloning repository...'
                git branch: 'main', url: 'https://github.com/aishwaryacscs/test-djangoo.git'
            }
        }

        stage('Set up Virtual Environment') {
            steps {
                echo 'ğŸ Setting up Python virtual environment...'
                sh '''
                    ${PYTHON} -m venv ${VENV_DIR}
                    . ${VENV_DIR}/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Run Django Tests') {
            steps {
                echo 'ğŸ§ª Running Django tests...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    python manage.py test || echo "âš ï¸ No tests found or some failed."
                '''
            }
        }

        stage('Finish') {
            steps {
                echo 'âœ… Jenkins pipeline executed successfully!'
            }
        }
    }

    post {
        failure {
            echo 'âŒ Build failed â€” check the console output.'
        }
        success {
            echo 'ğŸ‰ Build completed successfully.'
        }
    }
}

