pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo '📦 Cloning repository...'
                git branch: 'main', url: 'https://github.com/aishwaryacscs/test-djangoo.git'
            }
        }

        stage('Set up Virtual Environment') {
            steps {
                echo '🐍 Setting up Python virtual environment...'
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r test-django-main/requirements.txt
                '''
            }
        }

        stage('Run Django Tests') {
            steps {
                echo '🧪 Running Django tests...'
                sh '''
                    . venv/bin/activate
                    cd test-django-main
                    python manage.py test || echo "⚠️ No tests found, skipping..."
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Build successful!'
        }
        failure {
            echo '❌ Build failed — check the console output.'
        }
    }
}

